<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>

<GridPane fx:controller="com.example.lab04.HelloController" xmlns:fx="http://javafx.com/fxml"
          alignment = "center" hgap ="10" vgap="10">

    <Label text = "Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField promptText="Username" fx:id="Username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text = "Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField promptText="Password" fx:id="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text = "Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField promptText="Full Name" fx:id="FullName" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text = "E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField promptText="E-mail" fx:id="E_mail" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text = "Phone #:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField promptText="###-###-####" fx:id="Phone" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text = "Date Of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker promptText="YYYY-MM-DD" fx:id="DoB" GridPane.columnIndex="1" GridPane.rowIndex="6"></DatePicker>
    <Button fx:id="submitButton" text = "Register" onAction="#RegisterButton" GridPane.columnIndex="0" GridPane.rowIndex="7" />
</GridPane>


